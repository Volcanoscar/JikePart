<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_color_bg"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/time_train_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/train_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G102"
                android:textSize="20sp"
                android:textColor="#48ABD7" >
            </TextView>

            <TextView
                android:id="@+id/train_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="高速动车"
                android:textSize="16sp"
                android:textColor="@color/black6" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/start_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:30"
            android:textSize="22sp"
            android:textColor="@color/black" >
        </TextView>

        <TextView
            android:id="@+id/arrive_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:20"
            android:textSize="18sp"
            android:textColor="@color/black" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/city_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/time_train_ll"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/used_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="耗时： 05:41"
            android:textColor="#696969"
            android:textSize="16sp" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/start_station_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trains_start" />

            <TextView
                android:id="@+id/start_station_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海虹桥"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/end_station_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/train_final" />

            <TextView
                android:id="@+id/end_station_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/price_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/seat_grad_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二等座"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥529.5"
            android:textColor="@color/price_yellow"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/remain_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余票 4张"
            android:textColor="@color/black6"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rightsmallarrow" />

</RelativeLayout>