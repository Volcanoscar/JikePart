<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/list_item_color_bg" >

    <RelativeLayout
        android:id="@+id/one_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/time_city_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/startTime_tv"
                style="@style/InlandAirlineListTimeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:30"
                android:textSize="19sp" >
            </TextView>

            <TextView
                style="@style/InlandAirlineListTimeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="15sp" >
            </TextView>

            <TextView
                android:id="@+id/endTime_tv"
                style="@style/InlandAirlineListTimeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:30"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/startCity_tv"
                style="@style/InlandAirlineListCityTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="上海" >
            </TextView>

            <TextView
                style="@style/InlandAirlineListCityTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " >
            </TextView>

            <TextView
                android:id="@+id/endCity_tv"
                style="@style/InlandAirlineListCityTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/time_city_ll"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/discount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4折"
                android:textColor="@color/black_txt_color"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="￥1200"
                android:textColor="#FD8F23"
                android:textSize="19sp" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/flight_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/one_rl"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/FlightNameAndNo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深航ZH9959"
            android:textColor="@color/black6"
            android:textSize="14sp" >
        </TextView>

        <TextView
            android:id="@+id/PlaneTypeAndModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="739中"
            android:textColor="@color/black"
            android:textSize="15sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/flight_rl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/CabinName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经济舱"
            android:textColor="@color/black6"
            android:textSize="14sp" >
        </TextView>

        <TextView
            android:id="@+id/ticketCount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="3张"
            android:textColor="#CD3737"
            android:textSize="14sp" >
        </TextView>

        <LinearLayout 
            android:id="@+id/fanMoney_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="6dp"
	            android:background="@drawable/icon_flight_fan" />
	
	        <TextView
	            android:id="@+id/fanMoney_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dp"
	            android:text="￥32"
	            android:textColor="#FD8F23"
	            android:textSize="14sp" >
	        </TextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>